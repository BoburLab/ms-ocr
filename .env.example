# ── Storage ──────────────────────────────────────
RAW_STORAGE_PATH=./storage/raw
PREPROCESSED_STORAGE_PATH=./storage/preprocessed
OUTPUT_STORAGE_PATH=./storage/output

# ── vLLM Server ─────────────────────────────────
VLLM_BASE_URL=http://vllm:8001
VLLM_MODEL_NAME=lightonai/LightOnOCR-2-1B

# ── File Validation ─────────────────────────────
MAX_FILE_SIZE_MB=20

# ── PDF / Image Bomb Protection ─────────────────
MAX_PDF_PAGES=50
MAX_IMAGE_DIMENSION=10000

# ── Request Timeout (seconds) ──────────────────
REQUEST_TIMEOUT_SECONDS=300

# ── Max request body (bytes, ASGI) ─────────────
MAX_REQUEST_BODY_BYTES=26214400

# ── File Cleanup (hours, 0=disabled) ───────────
FILE_RETENTION_HOURS=72

# ── Trusted Proxies (CIDR list) ────────────────
# TRUSTED_PROXIES=["127.0.0.1","172.16.0.0/12","10.0.0.0/8"]

# ── Rate Limiting ───────────────────────────────
RATE_LIMIT_PER_MINUTE=20

# ── API Key (leave empty to disable) ────────────
API_KEY=

# ── CORS (comma-separated origins, empty = disabled) ──
CORS_ALLOWED_ORIGINS=

# ── Application Mode ───────────────────────────
DEBUG=true

# ── Port binding ────────────────────────────────
OCR_BIND=0.0.0.0

# ── MLflow (optional) ──────────────────────────
MLFLOW_TRACKING_URI=

# ── FastAPI Server ──────────────────────────────
HOST=0.0.0.0
PORT=8000
